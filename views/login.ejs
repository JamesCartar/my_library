<div class="login-form-page">
  <a href="/"><i class="fa-solid fa-xmark burger-close"></i></a>
  <form action="/login" method="post" class="login-form">
    <h2>Login Here</h2>

    <div class="input-group">
      <div class="username">
        <i class="fa-solid fa-user" title="login"></i>
        <input type="text" class="user" placeholder="Enter Username or Email" />
      </div>
      <div class="username">
        <i class="fa-solid fa-lock"></i>
        <input type="password" class="password" placeholder="Enter Password" />
      </div>
    </div>

    <div class="submit">
      <button type="submit" class="login-btn">Login</button>
    </div>
  </form>
  <p class="ref-register">
    Don't have an Account ? <a href="/register">Sign Up</a>
  </p>
</div>
